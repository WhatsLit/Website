<form {{action 'authenticate' on='submit'}}>
  {{#if errorMessages}}
    <strong> Sign up failed: </strong>
    <ul>
      {{#each errorMessages as |error|}}
        <li><code>{{error}}</code></li>
      {{/each}}
    </ul>
  {{/if}}
    <div class="form-group">
        <label for="email">
          Email Address:
          {{#if loginError}}
            <code>{{loginError}}</code>
          {{/if}}
        </label>
        {{input value=identification placeholder='partier@whatslit.io' class='form-control'}}
    </div>
    <div class="form-group">
      <label for="identification">
        Username:
        {{#if loginError}}
          <code>{{loginError}}</code>
        {{/if}}
      </label>
      {{input value=identification placeholder='Login' class='form-control'}}
    </div>
    <div class="form-group">
      <label for="password">
        Password:
        {{#if passwordError}}
          <code>{{passwordError}}</code>
        {{/if}}
      </label>
      {{input value=password placeholder='Password' class='form-control' type='password'}}
    </div>
    <button type="submit" class="btn btn-default">Sign up</button>
</form>
