<div class="container">

  <!--[if lt IE 9]>
    <script>
      document.createElement('video');
    </script>
  <![endif]-->

  <video autoplay loop preload='none' poster="assets/img/background_small.png" id="bgvid">
      <source src="assets/video/lights_short.mp4" type="video/mp4">
  </video>
<div class="signup">
  <form {{action 'register' on='submit'}}>
    {{#if errorMessages}}
      <strong> Sign up failed: </strong>
      <ul>
        {{#each errorMessages as |error|}}
          <li><code>{{error}}</code></li>
        {{/each}}
      </ul>
    {{/if}}
        <div class="form-group">
        <label for="username">
          Username:
          {{#if usernameError}}
            <code>{{usernameError}}</code>
          {{/if}}
        </label>
        {{input value=username placeholder='Username' class='form-control'}}
      </div>
      <div class="form-group">
          <label for="email">
            Email Address:
            {{#if emailError}}
              <code>{{emailError}}</code>
            {{/if}}
          </label>
          {{input value=email placeholder='whatslit@whatslit.io' class='form-control'}}
      </div>
      <div class="form-group">
        <label for="password">
          Password:
          {{#if passwordError}}
            <code>{{passwordError}}</code>
          {{/if}}
        </label>
        {{input value=password placeholder='Password' class='form-control' type='password'}}
  		</div>

      <button type="submit" class="btn btn-default">Sign up</button>
  </form>

  {{outlet}}

</div>
</div>
